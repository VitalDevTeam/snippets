[user]
    name = "Biff Tannen"
    email = butthead@example.com

[alias]
    # Lazy
    c = commit -am
    s = status -sb
    co = checkout
    df = diff --color --color-words --abbrev
    dt = difftool

    # Fancy log
    lg = log --graph --all --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(bold white)â€” %an%C(reset)%C(bold yellow)%d%C(reset)' --abbrev-commit --date=relative

    # Discard local changes and reset to latest state of origin
    forcepull = "!sh -c \"git fetch --all;git reset --hard origin/master;\" -"

    # Reset repo to state before the last commit (If you haven't pushed to remote yet)
    uncommit = reset --soft HEAD^

    # Undo last commit amend
    unamend = reset --soft HEAD@{1}

    # Reset to commit and discard all changes
    unfuck = reset --hard

    # Remove from tracking
    untrack = rm --cached
    untrackdir = rm -r --cached

    # Search commit messages
    search = "!sh -c \"git lg | grep --color $1\" -"

    # Add WP Engine remotes (pass install name)
    wpe = "!sh -c \"git remote add production git@git.wpengine.com:production/$1.git; git remote add staging git@git.wpengine.com:staging/$1.git;git remote -v;\" -"

    # diff-so-fancy (pipe git diff into this)
    # https://github.com/so-fancy/diff-so-fancy
    dsf = "!f() { [ -z \"$GIT_PREFIX\" ] || cd \"$GIT_PREFIX\" && git diff --color \"$@\" | diff-so-fancy | less --tabs=4 -RFX; }; f"

[color]
    ui = always

[color "diff"]
    meta = yellow bold
    commit = green bold
    frag = magenta bold
    old = red bold
    new = green bold
    whitespace = red reverse

[color "diff-highlight"]
    oldNormal = red bold
    oldHighlight = "red bold 52"
    newNormal = "green bold"
    newHighlight = "green bold 22"

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[core]
    editor = nano
    excludesfile = ~/.gitignore_global
    filemode = false
    ignorecase = true
    pager = diff-highlight | diff-so-fancy | less -r

[diff]
    # Beyond Compare
	tool = bc3

[merge]
    # Beyond Compare
	tool = bc3

[mergetool]
    # Beyond Compare
	bc3 = trustExitCode
    # Keep unmerged backups
	keepBackup = true

[push]
    default = simple
